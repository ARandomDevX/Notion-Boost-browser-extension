{
  "name": "Notion Boost",
  "version": "0.1.0",
  "description": "Show outline for notion https://notion.so. More cool features on the way!",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "author": "jerrygoyal",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": { "scripts": ["background.bundle.js"], "persistent": false },
  "offline_enabled": true,
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "js": ["content.bundle.js"]
    }
  ],
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Notion Boost",
    "default_popup": "popup.html"
  },
  "short_name": "Notion Boost",
  "web_accessible_resources": ["content.bundle.js"],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'  'unsafe-eval'; object-src 'self'"
}
