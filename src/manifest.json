{
  "name": "Notion Boost",
  "short_name": "Notion Boost",
  "version": "1.7",
  "description": "Boost Notion productivity with features like outline,small text full width for all,back to top button,hide slash command menu etc",

  "author": "Gourav Goyal",

  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "js": ["content.bundle.js"]
    }
  ],
  "page_action": {
    "default_title": "Notion Boost",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["content.bundle.js"],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "homepage_url": "https://gourav.io/notion-boost"
}
